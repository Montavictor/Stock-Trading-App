<h2> Current balance: <%= current_user.balance %> </h2>
<% if @transaction_type == "Sell" %>
  <p> Current stock: <%= @stock_quantity %>
<% end %>

<p>Symbol: <%= @symbol %> </p>
<p>Price: <%= @stock_price %> </p>
<%= form_with url: new_transaction_path, method: :get do |form| %>
<%= form.hidden_field :transaction_type, value: @transaction_type %>
<%= form.label :quantity %>
<%= form.number_field :quantity, in: 1.0..100, step: 1 %>
<div>
  <%= form.submit "Check Price" %>
</div>
<% end %>

<%= link_to "Back to search", "/search" %>
<%= link_to "Back to dashboard", transactions_path %>