<h1 class="text-3xl font-bold mb-2 text-indigo-900">Transactions</h1>
<%= render "pages/account_balance" %>
<div class="overflow-x-auto bg-white shadow-md rounded-lg">
  <table class="min-w-full table-auto border-separate border-spacing-y-2 text-sm text-gray-700">
    <thead class="bg-indigo-100">
      <tr>
        <th class="px-4 py-2 text-left font-lg text-indigo-900 font-bold">Company Name</th>
        <th class="px-4 py-2 text-left font-lg text-indigo-900 font-bold">Stock Price</th>
        <th class="px-4 py-2 text-left font-lg text-indigo-900 font-bold">Quantity</th>
        <th class="px-4 py-2 text-left font-lg text-indigo-900 font-bold">Total Price</th>
        <th class="px-4 py-2 text-left font-lg text-indigo-900 font-bold">Transaction</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% if @transactions.any? %>   
        <% @transactions.each do |transaction| %>
          <tr class="hover:bg-indigo-50 transition-colors duration-200">
            <td class="px-4 py-2"><%= transaction.company_name %></td>
            <td class="px-4 py-2"><%= transaction.stock_price %></td> 
            <td class="px-4 py-2"><%= transaction.quantity %></td> 
            <td class="px-4 py-2"><%= transaction.total_price %></td>
            <td class="px-4 py-2 <%= transaction.transaction_type == "Buy" ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>"><%= transaction.transaction_type %></td>
          </tr>
        <% end %>     
      <% else %>
        <tr>
          <td colspan="8" class="text-center py-4 text-gray-600">No transactions yet</td>
        </tr>
      <% end %>            
    </tbody>
  </table>
</div>