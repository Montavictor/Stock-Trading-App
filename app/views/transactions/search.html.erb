<div class="flex flex-col justify-center h-full">
  <%= form_with url: input_quantity_path, method: :get , class: "flex flex-col align-center space-y-6 bg-white p-6 rounded-md shadow-lg max-w-xl mx-auto center w-3/4" do |form| %>
    <%= form.label :symbol, "Symbol:", class: "mb-2"%>
    <%= form.search_field :symbol, class: "w-full px-3 py-2 border rounded-md", placeholder: "Type company symbol here..." %>
    <%= form.hidden_field :transaction_type, value: "Buy" %>
    <%= form.submit "Search", class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md font-medium w-full" %>
  <% end %> 
</div>
