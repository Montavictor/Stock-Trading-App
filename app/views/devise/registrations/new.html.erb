<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-6 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-4 text-center text-3xl leading-9 font-extrabold text-gray-900">Sign-up</h2>
  </div>

  <div class="mt-4 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-2">
          <%= f.label :first_name, class: "block text-sm font-medium leading-5 text-gray-700" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <%= f.text_field :first_name, autofocus: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
          </div>
        </div>

        <div class="field mb-2">
          <%= f.label :last_name, class: "block text-sm font-medium leading-5 text-gray-700" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <%= f.text_field :last_name, autofocus: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
          </div>
        </div>
        
        <div class="field mb-2">
          <%= f.label :email, class: "block text-sm font-medium leading-5 text-gray-700" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
          </div>
        </div>

        <div class="field mb-2">
          <%= f.label :username, class: "block text-sm font-medium leading-5 text-gray-700" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <%= f.text_field :username, autofocus: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
          </div>
        </div>

        <div class="field mb-2">
          <%= f.label :password, class: "block text-sm font-medium leading-5 text-gray-700" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "(6 characters minimum)", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
          </div>
        </div>

        <div class="field mb-2">
          <%= f.label :password_confirmation, class: "block text-sm font-medium leading-5 text-gray-700" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
          </div>
        </div>
        
        <div class="actions mt-6">
          <%= f.submit "Sign up", class: "w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out"%>
        </div>
      <% end %>

      <p class="text-slate-600 text-sm mt-4 text-center">
         Already have an account? 
        <%= link_to "Log in", new_session_path(resource_name), class:"text-blue-600 font-medium hover:underline ml-1"%>
      </p>

      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <p class="text-slate-700 text-sm text-center hover:underline mt-2">
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
        </p>
      <% end %>
    </div>
  </div>
</div>