<%= form_with model: [:admin, @user], class: "space-y-6 bg-white p-6 rounded-md shadow-xl max-w-xl mx-auto border border-gray-200" do |form| %>
    <h1 class="text-3xl font-bold mb-6 text-indigo-900">Create User</h1>  
  <div>
    <label class="block font-bold mb-1 text-indigo-900">Email:</label>
    <%= form.email_field :email, placeholder: "Enter email", required: true, class: "w-full px-3 py-2 border rounded-md  border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400 hover:border-indigo-600 hover:ring-1" %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
      <p class="text-sm text-red-600 mt-1"><%= message %></p>
    <% end %>
  </div>

  <div>
    <label class="block font-bold mb-1 text-indigo-900">Username:</label>
    <%= form.text_field :username, placeholder: "Enter Username", required: true, class: "w-full px-3 py-2 border rounded-md border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400 hover:border-indigo-600 hover:ring-1" %>
    <% @user.errors.full_messages_for(:username).each do |message| %>
      <p class="text-sm text-red-600 mt-1"><%= message %></p>
    <% end %>
  </div>



  <div>
    <label class="block font-bold mb-1 text-indigo-900">Last Name:</label>
    <%= form.text_field :last_name, required: true, class: "w-full px-3 py-2 border rounded-md border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400 hover:border-indigo-600 hover:ring-1" %>
    <% @user.errors.full_messages_for(:last_name).each do |message| %>
      <p class="text-sm text-red-600 mt-1"><%= message %></p>
    <% end %>
  </div>

  <div>
    <label class="block font-bold mb-1 text-indigo-900">First Name:</label>
    <%= form.text_field :first_name, required: true, class: "w-full px-3 py-2 border rounded-md border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400 hover:border-indigo-600 hover:ring-1" %>
    <% @user.errors.full_messages_for(:first_name).each do |message| %>
      <p class="text-sm text-red-600 mt-1"><%= message %></p>
    <% end %>
  </div>

  <div>
    <label class="block font-bold mb-1 text-indigo-900">Password:</label>
    <%= form.password_field :password, placeholder: "Enter Password", required: true, class: "w-full px-3 py-2 border rounded-md border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400 hover:border-indigo-600 hover:ring-1" %>
    <% @user.errors.full_messages_for(:password).each do |message| %>
      <p class="text-sm text-red-600 mt-1"><%= message %></p>
    <% end %>
  </div>

  <div>
    <label class="block font-bold mb-1 text-indigo-900">Confirm Password:</label>
    <%= form.password_field :password_confirmation, placeholder: "Confirm Password", required: true, class: "w-full px-3 py-2 border rounded-md border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400 hover:border-indigo-600 hover:ring-1" %>
    <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
      <p class="text-sm text-red-600 mt-1"><%= message %></p>
    <% end %>
  </div>

<div>
  <label class="block font-bold mb-1 text-indigo-900">Role:</label>
  <%= form.select :is_admin,
      [["User", false], ["Admin", true]],
      { prompt: "Select Role" },
      class: "w-32 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-300"
  %>
  <% @user.errors.full_messages_for(:is_admin).each do |message| %>
    <p class="text-sm text-red-600 mt-1"><%= message %></p>
  <% end %>
</div>

<div>
  <label class="block font-bold mb-1 text-indigo-900">Status:</label>
  <%= form.select :status,
      [["Pending", false], ["Approved", true]],
      { prompt: "Select Status" },
      class: "w-40 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-300"
  %>
  <% @user.errors.full_messages_for(:status).each do |message| %>
    <p class="text-sm text-red-600 mt-1"><%= message %></p>
  <% end %>
</div>

  <div>
    <label class="block font-bold mb-1 text-indigo-900">Balance:</label>
    <%= form.number_field :balance, step: 0.01, placeholder: "Enter Balance", required: true, class: "w-full px-3 py-2 border rounded-md border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400 hover:border-indigo-600 hover:ring-1" %>
    <% @user.errors.full_messages_for(:balance).each do |message| %>
      <p class="text-sm text-red-600 mt-1"><%= message %></p>
    <% end %>
  </div>

  <div>
    <%= form.submit "Submit", class: "bg-indigo-600 text-white font-semibold px-6 py-2 rounded-md hover:bg-indigo-700" %>
  </div>
<% end %>
