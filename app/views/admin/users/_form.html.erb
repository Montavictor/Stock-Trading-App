<%= form_with model: [:admin, @user], class: "space-y-6 bg-white p-6 rounded-md shadow-md max-w-xl mx-auto" do |form| %>
  <div>
    <label class="block font-semibold mb-1">Email:</label>
    <%= form.email_field :email, placeholder: "Enter your email", required: true, class: "w-full px-3 py-2 border rounded-md" %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
      <p class="text-sm text-red-600 mt-1"><%= message %></p>
    <% end %>
  </div>

  <div>
    <label class="block font-semibold mb-1">Username:</label>
    <%= form.text_field :username, required: true, class: "w-full px-3 py-2 border rounded-md" %>
    <% @user.errors.full_messages_for(:username).each do |message| %>
      <p class="text-sm text-red-600 mt-1"><%= message %></p>
    <% end %>
  </div>

  <div>
    <label class="block font-semibold mb-1">Password:</label>
    <%= form.password_field :password, required: true, class: "w-full px-3 py-2 border rounded-md" %>
    <% @user.errors.full_messages_for(:password).each do |message| %>
      <p class="text-sm text-red-600 mt-1"><%= message %></p>
    <% end %>
  </div>

  <div>
    <label class="block font-semibold mb-1">Confirm Password:</label>
    <%= form.password_field :password_confirmation, required: true, class: "w-full px-3 py-2 border rounded-md" %>
    <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
      <p class="text-sm text-red-600 mt-1"><%= message %></p>
    <% end %>
  </div>

  <div>
    <label class="block font-semibold mb-1">Last Name:</label>
    <%= form.text_field :last_name, required: true, class: "w-full px-3 py-2 border rounded-md" %>
    <% @user.errors.full_messages_for(:last_name).each do |message| %>
      <p class="text-sm text-red-600 mt-1"><%= message %></p>
    <% end %>
  </div>

  <div>
    <label class="block font-semibold mb-1">First Name:</label>
    <%= form.text_field :first_name, required: true, class: "w-full px-3 py-2 border rounded-md" %>
    <% @user.errors.full_messages_for(:first_name).each do |message| %>
      <p class="text-sm text-red-600 mt-1"><%= message %></p>
    <% end %>
  </div>

  <div>
    <label class="block font-semibold mb-1">Role:</label>
    <%= form.select :is_admin, [["User", false], ["Admin", true]], prompt: "Select Role", class: "w-full px-3 py-2 border rounded-md" %>
    <% @user.errors.full_messages_for(:is_admin).each do |message| %>
      <p class="text-sm text-red-600 mt-1"><%= message %></p>
    <% end %>
  </div>

  <div>
    <label class="block font-semibold mb-1">Status:</label>
    <%= form.select :status, [["Pending", false], ["Approved", true]], prompt: "Select Status", class: "w-full px-3 py-2 border rounded-md" %>
    <% @user.errors.full_messages_for(:status).each do |message| %>
      <p class="text-sm text-red-600 mt-1"><%= message %></p>
    <% end %>
  </div>

  <div>
    <label class="block font-semibold mb-1">Balance:</label>
    <%= form.number_field :balance, step: 0.01, placeholder: "Enter Balance", required: true, class: "w-full px-3 py-2 border rounded-md" %>
    <% @user.errors.full_messages_for(:balance).each do |message| %>
      <p class="text-sm text-red-600 mt-1"><%= message %></p>
    <% end %>
  </div>

  <div>
    <%= form.submit "Submit", class: "bg-blue-600 text-white font-semibold px-6 py-2 rounded-md hover:bg-blue-700" %>
  </div>
<% end %>
