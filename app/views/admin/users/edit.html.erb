<h1 class="text-3xl font-bold mb-6 text-indigo-900">Edit User</h1>
<%= form_with model: [:admin, @user], class: "space-y-6 bg-white p-6 rounded-md border border-gray-200 shadow-lg max-w-lg mx-auto" do |form| %>

  <div class="block font-bold text-lg text-indigo-900">User:</div>
    <div class="block text-md font-semibold mb-8"><%= @user.email %></div>
      <div>
        <label class="block text-md font-semibold mb-1 text-indigo-900">New Password:</label>
        <%= form.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-indigo-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-400 hover:border-indigo-600" %>
        <% @user.errors.full_messages_for(:password).each do |message| %>
          <p class="text-sm text-red-600 mt-1"><%= message %></p>
        <% end %>
      </div>
    
      <div>
        <label class="block text-md font-semibold mb-1 text-indigo-900">Confirm Password:</label>
        <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-indigo-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-400 hover:border-indigo-600" %>
        <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
          <p class="text-sm text-red-600 mt-1"><%= message %></p>
        <% end %>
      </div>  

      <div>
        <label class="block text-md font-semibold mb-1 text-indigo-900">Status:</label>
        <%= form.select :status,
        [["Pending", false], ["Approved", true]],
        { prompt: "Select Status" },
        class: "mt-1 p-2 border border-indigo-300 rounded-md w-32 focus:outline-none focus:ring-2 focus:ring-indigo-400 hover:border-indigo-600"
        %>

        <% @user.errors.full_messages_for(:status).each do |message| %>
          <p class="text-sm text-red-600 mt-1"><%= message %></p>
        <% end %>
      </div>

      <div>
        <label class="block text-md font-semibold mb-1    text-indigo-900">Role:</label>
        <%= form.select :is_admin,
        [["User", false], ["Admin", true]],
        { prompt: "Select Role" },
          class: "w-32 px-3 py-2 border border-indigo-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-300 hover:border-indigo-600 "
          %>
        <% @user.errors.full_messages_for(:is_admin).each do |message| %>
          <p class="text-sm text-red-600 mt-1"><%= message %></p>
        <% end %>
      </div>

  <div>
    <%= form.submit "Update", class: "bg-indigo-600 text-white font-semibold px-6 py-2 rounded-md hover:bg-indigo-700" %>
  </div>
<% end %>
