<h1 class="text-2xl font-bold mb-6">Admin Page</h1>

<table class="min-w-full border border-gray-200 shadow-sm rounded-md mb-6">
  <thead class="bg-gray-100">
    <tr>
      <th class="px-4 py-2 text-left font-medium text-gray-700">ID</th>
      <th class="px-4 py-2 text-left font-medium text-gray-700">Username</th>
      <th class="px-4 py-2 text-left font-medium text-gray-700">Email</th>
      <th class="px-4 py-2 text-left font-medium text-gray-700">Balance</th>
      <th class="px-4 py-2 text-left font-medium text-gray-700">Status</th>
      <th class="px-4 py-2 text-left font-medium text-gray-700">Actions</th>
    </tr>
  </thead>
  <tbody class="divide-y divide-gray-200">
    <% @users.each do |user| %>
      <% unless user.is_admin? %>
        <tr class="bg-gray-100 hover:bg-white transition-colors duration-200">
          <td class="px-4 py-2"><%= user.id %></td>
          <td class="px-4 py-2"><%= user.username %></td>
          <td class="px-4 py-2"><%= user.email %></td>
          <td class="px-4 py-2"><%= number_to_currency(user.balance) %></td>
          <td class="px-4 py-2">
            <span class="inline-block px-2 py-1 text-sm rounded-full <%= user.status ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
              <%= user.status ? "Approved" : "Pending" %>
            </span>
          </td>
          <td class="px-4 py-2 space-x-2">
            <%= link_to 'Show', admin_user_path(user),
              class: "inline-block bg-blue-500 hover:bg-blue-600 text-white text-sm font-medium px-3 py-1 rounded-md" %>

            <%= link_to 'Edit', edit_admin_user_path(user),
              class: "inline-block bg-yellow-500 hover:bg-yellow-600 text-white text-sm font-medium px-3 py-1 rounded-md" %>

            <%= link_to 'Delete', admin_user_path(user),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
              class: "inline-block bg-red-500 hover:bg-red-600 text-white text-sm font-medium px-3 py-1 rounded-md" %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<div class="flex space-x-4">
  <%= link_to 'Create User', new_admin_user_path,
    class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md font-medium" %>

  <%= link_to 'Transactions', admin_transactions_path,
    class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium" %>

  <%= link_to 'Pending', admin_pending_path,
    class: "bg-yellow-600 hover:bg-yellow-700 text-white px-4 py-2 rounded-md font-medium" %>
</div>
