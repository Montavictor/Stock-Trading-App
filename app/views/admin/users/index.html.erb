
  <h1 class="text-4xl font-bold mb-6 text-indigo-900">Users</h1>

  <!-- Ransack Search -->
  <%= search_form_for @q, url: admin_users_path, method: :get, class: "mb-6" do |f| %>
  <div class="flex flex-wrap gap-4 items-end">
    <div>
      <%= f.label :username_cont, "User", class: "block text-sm font-bold text-indigo-800" %>
      <%= f.search_field :username_cont, class: "mt-1 p-2 border border-gray-300 rounded-md w-48 focus:outline-none focus:ring-2 focus:ring-indigo-300 hover:border-indigo-600" %>
    </div>

    <div>
      <%= f.label :email_cont, "Email", class: "block text-sm font-bold text-indigo-800" %>
      <%= f.search_field :email_cont, class: "mt-1 p-2 border border-gray-300 rounded-md w-48 focus:outline-none focus:ring-2 focus:ring-indigo-300 hover:border-indigo-600" %>
    </div>

    <div>
      <%= f.label :is_admin_eq, "Role", class: "block text-sm font-bold text-indigo-800" %>
      <%= f.select :is_admin_eq, [["All", nil], ["Admin", true], ["Trader", false]],
          {}, class: "mt-1 p-2 border border-gray-300 rounded-md w-32 focus:outline-none focus:ring-2 focus:ring-indigo-300 hover:border-indigo-600" %>
    </div>

    <div>
      <%= f.label :status_eq, "Status", class: "block text-sm font-bold text-indigo-800" %>
      <%= f.select :status_eq, [["All", nil], ["Approved", true], ["Pending", false]],
          {}, class: "mt-1 p-2 border border-gray-300 rounded-md w-32 focus:outline-none focus:ring-2 focus:ring-indigo-300 hover:border-indigo-600" %>
    </div>

    <div>
      <button type="submit" class="bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded-md flex items-center gap-2 hover:cursor-pointer">
        <i class="fa-solid fa-magnifying-glass mr-2"></i> 
        Search
      </button>
    </div>  
  </div>
<% end %>
<!-- Table  -->
<table class="min-w-full border border-separate border-gray-200 shadow-sm rounded-md mb-6 text-sm">
    <thead class="bg-indigo-100 text-center">
      <tr>
        <th class="px-4 py-2 text-center font-lg text-indigo-900 font-bold">ID</th>
        <th class="px-4 py-2 text-center font-lg text-indigo-900 font-bold">User</th>
        <th class="px-4 py-2 text-center font-lg text-indigo-900 font-bold">Date Created</th>
        <th class="px-4 py-2 text-center font-lg text-indigo-900 font-bold">Balance</th>
        <th class="px-4 py-2 text-center font-lg text-indigo-900 font-bold">Role</th>
        <th class="px-4 py-2 text-center font-lg text-indigo-900 font-bold">Status</th>
        <th class="px-4 py-2 text-center font-lg text-indigo-900 font-bold">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @users.each do |user| %>
          <tr class=" hover:bg-indigo-50 transition-colors duration-200">
            <td class="px-4 py-2 font-medium text-sm text-indigo-900 text-center"><%= user.id %></td>
            <td class="px-4 py-2">        
              <div class="font-semibold text-md text-indigo-800"><%= user.username %></div>
              <div class="text-xs text-gray-500"><%= user.email %></div>
            </td>
            <td class="px-4 py-2 leading-tight">
              <div class="font-semibold text-sm text-indigo-900">
                <%= user.created_at.strftime("%B %d, %Y") %>
              </div>
              <div class="text-xs text-gray-600">
                <%= user.created_at.strftime("%I:%M %p") %>
              </div>
            </td>
            <td class="px-4 py-2"><%= number_to_currency(user.balance) %></td>
            <td class="px-4 py-2 font-semibold text-center <%= user.is_admin? ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800' %>">
              <%= user.is_admin? ? "Admin" : "Trader" %>
            </td>
            <td class="px-4 py-2 text-center <%= user.status ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
              <span class="inline-block px-2 py-1 text-md font-semibold rounded-md ">
                <%= user.status ? "Approved" : "Pending" %>
              </span>
            </td>
            <td class="px-4 py-2 space-x-2 whitespace-nowrap justify-between items-center text-center">
              <%= link_to admin_user_path(user),
                class: "inline-block bg-blue-800 hover:bg-blue-900 text-white text-sm font-medium px-3 py-1 rounded-md" do %>
                  <i class="fa-solid fa-id-card mr-1"></i>
                  Details
              <% end %>
  
              <%= link_to edit_admin_user_path(user),
                class: "inline-block bg-emerald-700 hover:bg-emerald-800 text-white text-sm font-medium px-3 py-1 rounded-md" do %>
                  <i class="fa-solid fa-pencil mr-1 text-sm"></i>
                  Edit
              <% end %>
  
              <%= link_to admin_user_path(user, from: "users"),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "inline-block bg-rose-700 hover:bg-rose-800  text-white text-sm font-medium px-3 py-1 rounded-md" do %>
                    <i class="fa-solid fa-trash mr-1"></i>
                    Delete
                <% end %>
            </td>
          </tr>
        <% end %>
    </tbody>
</table>
<div class="flex justify-center mt-6 text-indigo-900 font-bold">
  <%= paginate @users %>
</div>