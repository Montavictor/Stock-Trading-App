<div class="p-6">
  <h1 class="text-4xl font-bold mb-6 text-indigo-900">Users</h1>
  
  <table class="min-w-full border border-separate border-gray-200 shadow-sm rounded-md mb-6 text-sm">
    <thead class="bg-indigo-100">
      <tr>
        <th class="px-4 py-2 text-left text-md font-lg text-indigo-900 font-bold">ID</th>
        <th class="px-4 py-2 text-left text-md font-lg text-indigo-900 font-bold">Username</th>
        <th class="px-4 py-2 text-left text-md font-lg text-indigo-900 font-bold">Email</th>
        <th class="px-4 py-2 text-left text-md font-lg text-indigo-900 font-bold">Balance</th>
        <th class="px-4 py-2 text-left text-md font-lg text-indigo-900 font-bold">Role</th>
        <th class="px-4 py-2 text-left text-md font-lg text-indigo-900 font-bold">Status</th>
        <th class="px-4 py-2 text-left text-md font-lg text-indigo-900 font-bold">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @users.each do |user| %>
          <tr class=" hover:bg-indigo-50 transition-colors duration-200">
            <td class="px-4 py-2"><%= user.id %></td>
            <td class="px-4 py-2"><%= user.username %></td>
            <td class="px-4 py-2"><%= user.email %></td>
            <td class="px-4 py-2"><%= number_to_currency(user.balance) %></td>
            <td class="px-4 py-2"><%= user.is_admin? ? "Admin" : "Trader" %></td>
            <td class="px-4 py-2 <%= user.status ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
              <span class="inline-block px-2 py-1 text-md font-semibold rounded-md ">
                <%= user.status ? "Approved" : "Pending" %>
              </span>
            </td>
            <td class="px-4 py-2 space-x-2 justify-between">
              <%= link_to 'Details', admin_user_path(user),
                class: "inline-block bg-blue-500 hover:bg-blue-600 text-white text-sm font-medium px-3 py-1 rounded-md" %>
  
              <%= link_to 'Edit', edit_admin_user_path(user),
                class: "inline-block bg-yellow-500 hover:bg-yellow-600 text-white text-sm font-medium px-3 py-1 rounded-md" %>
  
              <%= link_to 'Delete', admin_user_path(user, from: "users"),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "inline-block bg-red-500 hover:bg-red-600 text-white text-sm font-medium px-3 py-1 rounded-md" %>
            </td>
          </tr>
        <% end %>
    </tbody>
  </table>
</div>
