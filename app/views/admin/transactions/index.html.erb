
  <h1 class="text-3xl font-bold mb-6 text-indigo-900">All Transactions</h1>
  
<%= search_form_for @q, url: admin_transactions_path, method: :get, class: "mb-4" do |f| %>
  <div class="flex flex-wrap gap-4 items-end">
    <div>
      <%= f.label :user_username_cont, "Username", class: "block text-sm font-bold text-indigo-800" %>
      <%= f.search_field :user_username_cont, class: "mt-1 p-2 border border-gray-300 rounded-md w-48 hover:border-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-300"%>
    </div>

    <div>
      <%= f.label :company_name_cont, "Company", class: "block text-sm font-bold text-indigo-800"  %>
      <%= f.search_field :company_name_cont, class: "mt-1 p-2 hover:border-indigo-600 border border-gray-300 rounded-md w-48 focus:outline-none focus:ring-2 focus:ring-indigo-300" %>
    </div>

    <div>
      <%= f.label :transaction_type_eq, "Type", class: "block text-sm font-bold text-indigo-800"  %>
      <%= f.select :transaction_type_eq,
             [["Buy", "buy"], ["Sell", "sell"]],
             { include_blank: true },
             class: "mt-1 p-2 border border-gray-300 rounded-md w-24 focus:outline-none focus:ring-2 focus:ring-indigo-300 hover:border-indigo-600" %>
    </div>

    <div>
      <button type="submit" class="bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded-md flex items-center gap-2 hover:cursor-pointer">
        <i class="fa-solid fa-magnifying-glass mr-2"></i> 
        Search
      </button>
    </div>  
  </div>
<% end %>

  <div class="overflow-x-auto bg-white shadow-md rounded-lg">
    <table class="min-w-full table-auto border-separate border-spacing-y-2 text-sm text-gray-700">
      <thead class="bg-indigo-100">
        <tr>
          <th class="px-4 py-2 text-left font-lg text-indigo-900 font-bold">Date</th>
          <th class="px-4 py-2 text-left font-lg text-indigo-900 font-bold">User</th>
          <th class="px-4 py-2 text-center font-lg text-indigo-900 font-bold">Type</th>
          <th class="px-4 py-2 text-center font-lg text-indigo-900 font-bold">Company</th>
          <th class="px-4 py-2 text-center font-lg text-indigo-900 font-bold">Quantity</th>
          <th class="px-4 py-2 text-center font-lg text-indigo-900 font-bold">Stock Price</th>
          <th class="px-4 py-2 text-center font-lg text-indigo-900 font-bold">Total Price</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% if @transactions.any? %>
          <% @transactions.each_with_index do |trans, i| %>
            <tr class="hover:bg-indigo-50 transition-colors duration-200">
              <td class="px-4 py-2 leading-tight">
                <div class="font-medium text-indigo-900"><%= trans.created_at.strftime("%B %d, %Y") %></div>
                <div class="text-xs text-gray-600"><%= trans.created_at.strftime("%I:%M %p") %></div>
              </td>
              <td class="px-4 py-2"><%= render_user(trans.user) %></td>
              <td class="px-4 py-2 capitalize font-semibold text-center <%= trans.transaction_type == "buy" ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>"><span class="inline-block px-2 py-1 text-sm rounded-sm ">
              <%= trans.transaction_type == "buy" ? "Buy" : "Sell" %>
              <td class="px-4 py-2 text-center"><%= trans.company_name %></td>
              <td class="px-4 py-2 text-center"><%= trans.quantity %></td>
              <td class="px-4 py-2 text-center"><%= number_to_currency(trans.stock_price) %></td>
              <td class="px-4 py-2 text-center text-indigo-900 font-semibold"><%= number_to_currency(trans.total_price) %></td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="8" class="text-center py-6 text-gray-500">No transactions yet.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<div class="flex justify-center mt-6 text-indigo-900 font-bold">
  <%= paginate @transactions %>
</div>